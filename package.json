{
  "name": "gemcraft",
  "version": "1.0.0",
  "description": "A modern jewel-gem match-3 puzzle game built with React Native for Celo blockchain",
  "main": "index.js",
  "scripts": {
    "start": "expo start",
    "android": "expo start --android",
    "ios": "expo start --ios",
    "web": "expo start --web",
    "build:web": "expo export --platform web",
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx",
    "type-check": "tsc --noEmit",
    "hardhat:compile": "cd contracts && npx hardhat compile",
    "hardhat:test": "cd contracts && npx hardhat test",
    "hardhat:deploy:alfajores": "cd contracts && npx hardhat run scripts/deploy.js --network alfajores",
    "hardhat:verify": "cd contracts && npx hardhat verify --network alfajores"
  },
  "dependencies": {
    "@celo/contractkit": "^4.0.0",
    "@expo/metro-runtime": "^6.1.1",
    "@expo/vector-icons": "^13.0.0",
    "@react-native-async-storage/async-storage": "1.18.2",
    "@react-navigation/native": "^6.1.7",
    "@react-navigation/stack": "^6.3.17",
    "@reduxjs/toolkit": "^1.9.5",
    "@walletconnect/react-native-dapp": "^1.7.1",
    "ethers": "^5.7.2",
    "expo": "~49.0.0",
    "expo-av": "~13.4.1",
    "expo-build-properties": "^1.0.8",
    "expo-constants": "~14.4.2",
    "expo-crypto": "~12.4.1",
    "expo-dev-client": "~2.4.12",
    "expo-font": "~11.4.0",
    "expo-haptics": "~12.4.0",
    "expo-linking": "~5.0.2",
    "expo-splash-screen": "~0.20.5",
    "expo-status-bar": "~1.6.0",
    "expo-web-browser": "~12.3.2",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "react-native": "0.72.6",
    "react-native-gesture-handler": "~2.12.0",
    "react-native-reanimated": "~3.3.0",
    "react-native-safe-area-context": "4.6.3",
    "react-native-screens": "~3.22.0",
    "react-native-svg": "13.9.0",
    "react-native-web": "~0.19.6",
    "react-redux": "^8.1.2",
    "redux-persist": "^6.0.0",
    "zustand": "^4.4.1"
  },
  "devDependencies": {
    "@babel/core": "^7.20.0",
    "@types/jest": "^29.5.2",
    "@types/react": "~18.2.14",
    "@types/react-native": "~0.72.2",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.44.0",
    "eslint-config-expo": "^7.0.0",
    "jest": "^29.5.0",
    "jest-expo": "~49.0.0",
    "react-test-renderer": "18.2.0",
    "typescript": "^5.1.3"
  },
  "private": true,
  "keywords": [
    "react-native",
    "expo",
    "celo",
    "blockchain",
    "match-3",
    "puzzle-game",
    "pwa",
    "web3"
  ],
  "author": "GemCraft Team",
  "license": "MIT"
}
